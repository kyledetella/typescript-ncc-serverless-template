{
  "compilerOptions": {
    "lib": ["es2017", "esnext.asynciterable", "es2017.object"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["src/**/*.test.ts"]
}
