{
  "name": "typescript-ncc-serverless-template",
  "version": "1.0.0",
  "description": "TypeScript + ncc + serverless template",
  "scripts": {
    "start": "nodemon -e ts,graphql --ignore dist --exec 'ncc build src/index.ts -o dist -s && serverless offline'",
    "pretest": "npm run fmt && npm run lint",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "build": "ncc build src/index.ts -o dist -m -s",
    "predeploy": "npm t",
    "deploy": "npm run build && NODE_ENV=production npx serverless deploy",
    "lint": "tslint -c tslint.json './**/*.ts' -t stylish",
    "fmt": "prettier --write \"src/**/*.{json,graphql,ts,yml,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@types/aws-lambda": "^8.10.31",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@zeit/ncc": "^0.20.4",
    "aws-sdk": "^2.499.0",
    "aws-xray-sdk": "^2.3.4",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "serverless-offline": "^5.8.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  }
}
